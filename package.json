{
	"name": "forum-diskusi-fe",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"start": "node build/index.js",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"heroku-postbuild": "npm run build",
		"smui-theme": "smui-theme compile static/smui.css -i src/theme",
		"prepare": "svelte-kit sync && npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
	},
	"devDependencies": {
		"@playwright/test": "^1.20.0",
		"@smui/button": "^6.1.0",
		"@smui/card": "^6.1.0",
		"@smui/checkbox": "^6.1.0",
		"@smui/data-table": "^6.1.0",
		"@smui/form-field": "^6.1.0",
		"@smui/icon-button": "^6.1.0",
		"@smui/select": "^6.1.0",
		"@smui/snackbar": "^6.1.0",
		"@smui/textfield": "^6.1.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-netlify": "^1.0.0-next.51",
		"@sveltejs/adapter-node": "^1.0.0-next.73",
		"@sveltejs/adapter-vercel": "^1.0.0-next.22",
		"@sveltejs/kit": "next",
		"@tailwindcss/jit": "^0.1.18",
		"@types/cookie": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"autoprefixer": "^10.2.5",
		"date-picker-svelte": "^2.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.2.15",
		"prettier": "2.7.0",
		"prettier-plugin-svelte": "^2.5.0",
		"sass": "^1.49.11",
		"smui-theme": "^6.1.3",
		"svelte": "^3.46.0",
		"svelte-bootstrap-icons": "^1.8.0",
		"svelte-check": "^2.2.6",
		"svelte-paginate": "^0.0.1",
		"svelte-preprocess": "^4.10.1",
		"tailwind-scrollbar": "^1.3.1",
		"tailwindcss": "^2.1.2",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"@lukeed/uuid": "^2.0.0",
		"@mdi/js": "^6.6.96",
		"@supabase/supabase-js": "^1.35.4",
		"@sveltejs/svelte-virtual-list": "^3.0.1",
		"axios": "^0.27.2",
		"cookie": "^0.4.1",
		"formik": "^2.2.9",
		"jwt-decode": "^3.1.2",
		"node-sass": "^7.0.1",
		"svelte-chartjs": "^1.0.1",
		"svelte-forms-lib": "^2.0.1",
		"svelte-material-icons": "^2.0.4",
		"svelte-materialify": "^0.3.11",
		"svelte-particles": "^1.11.0",
		"svelte-yup": "^1.0.5",
		"yup": "^0.32.11"
	},
	"heroku-run-build-script": true,
	"trailingComma": "es5",
	"tabWidth": 4,
	"semi": false,
	"singleQuote": true
}
